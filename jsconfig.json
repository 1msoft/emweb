{
  "compilerOptions": {
    "baseUrl": ".",

    "paths": {
      "@pages/*": ["src/pages/*"],
      "@config/*": ["src/config/*"],
      "@assets/*": ["src/assets/*"],
      "@components/*": ["src/components/*"],
    },
    "target": "ES6",
    "module": "es6",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
